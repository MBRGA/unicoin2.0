{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs", //esnext modules don't work with Typescript
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/**/*.d.ts",
    "scripts/**/*.ts",
    "scripts/**/*.d.ts",
    "migrations/**/*.ts"],
  "files": [
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "artifacts"
  ]
}
